<Window x:Class="DuplicateDetector.WinApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuplicateDetector.WinApp"
        xmlns:duplicateDetection="clr-namespace:DuplicateDetector.WinApp.DuplicateDetection"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Window.Resources>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            Select folder:
        </Label>

        <TextBox
            Name="FolderInput"
            Grid.Row="0"
            Grid.Column="2"
            Grid.ColumnSpan="9"
            PreviewMouseLeftButtonDown="FolderInput_OnMouseLeftButtonDown"
            IsReadOnly="True"
            VerticalAlignment="Center">

        </TextBox>


        <Grid
            Grid.Row="1"
            Grid.RowSpan="11"
            Grid.Column="0"
            Grid.ColumnSpan="12"
            Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"></TextBlock>
            <Border
                Grid.Column="1"
                BorderBrush="Black">

                <ListView Name="DuplicateItemsListView">
                    <ListView.ItemTemplate>
                        <DataTemplate x:Name="DuplicateItemTemplate" DataType="{x:Type duplicateDetection:DuplicateEntry}">
                            <TextBlock Text="{Binding FileName}"></TextBlock>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DuplicateItemOnCLick" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>

            <TextBlock Grid.Column="2"></TextBlock>

        </Grid>

    </Grid>
</Window>
